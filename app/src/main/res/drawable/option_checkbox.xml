<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  
  <item android:state_checked="true" android:state_pressed="false" >
    <layer-list>
      <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp"
        android:bottom="0dp" >
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dip"
                android:color="@color/border_line_csl" />
            <padding
		            android:left="16dip"
		            android:top="8dip"
		            android:bottom="11dip"
		            android:right="12dip" />
        </shape>
      </item>
      <item android:right="0dp" >
        <bitmap android:src="@drawable/ic_checkbox_on" android:gravity="right" />
      </item>
    </layer-list>
  </item>
  
  <item android:state_checked="true" android:state_pressed="true" >
    <layer-list>
      <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp"
        android:bottom="0dp" >
        <shape android:shape="rectangle" >
            <solid android:color="@color/pressed_csl" />
            <stroke
                android:width="1dip"
                android:color="@color/border_line_csl" />
            <padding
		            android:left="16dip"
		            android:top="8dip"
		            android:bottom="11dip"
		            android:right="12dip" />
        </shape>
      </item>
      <item android:right="0dp" >
        <bitmap android:src="@drawable/ic_checkbox_on" android:gravity="right" />
      </item>
    </layer-list>
  </item>

  <item android:state_checked="false" android:state_pressed="false" >
    <layer-list>
      <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp"
        android:bottom="0dp" >
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dip"
                android:color="@color/border_line_csl" />
            <padding
		            android:left="16dip"
		            android:top="8dip"
		            android:bottom="11dip"
		            android:right="12dip" />
        </shape>
      </item>
      <item android:right="0dp" >
        <bitmap android:src="@drawable/ic_checkbox_off" android:gravity="right" />
      </item>
    </layer-list>
  </item>
  
  <item android:state_checked="false" android:state_pressed="true" >
    <layer-list>
      <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp"
        android:bottom="0dp" >
        <shape android:shape="rectangle" >
            <solid android:color="@color/pressed_csl" />
            <stroke
                android:width="1dip"
                android:color="@color/border_line_csl" />
            <padding
		            android:left="16dip"
		            android:top="8dip"
		            android:bottom="11dip"
		            android:right="12dip" />
        </shape>
      </item>
      <item android:right="0dp" >
        <bitmap android:src="@drawable/ic_checkbox_off" android:gravity="right" />
      </item>
    </layer-list>
  </item>

</selector>
