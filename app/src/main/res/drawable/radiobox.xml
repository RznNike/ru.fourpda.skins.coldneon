<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  
  <item android:state_selected="true" android:state_pressed="false" >
    <layer-list>
      <item>
        <bitmap android:src="@drawable/ic_radiobutton_on" android:gravity="center" />
      </item>
    </layer-list>
  </item>

  <item android:state_selected="false" android:state_pressed="false" >
    <layer-list>
      <item>
        <bitmap android:src="@drawable/ic_radiobutton_off" android:gravity="center" />
      </item>
    </layer-list>
  </item>


  <item android:state_selected="true" android:state_pressed="true" >
    <layer-list>
      <item>
        <shape android:shape="rectangle" >
          <solid android:color="@color/pressed_csl" />
        </shape>
      </item>
      <item>
        <bitmap android:src="@drawable/ic_radiobutton_on" android:gravity="center" />
      </item>
    </layer-list>
  </item>

  <item android:state_selected="false" android:state_pressed="true" >
    <layer-list>
      <item>
        <shape android:shape="rectangle" >
          <solid android:color="@color/pressed_csl" />
        </shape>
      </item>
      <item>
        <bitmap android:src="@drawable/ic_radiobutton_off" android:gravity="center" />
      </item>
    </layer-list>
  </item>

</selector>
