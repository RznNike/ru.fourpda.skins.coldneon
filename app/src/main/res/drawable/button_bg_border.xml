<?xml version="1.0" encoding="UTF-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <layer-list>
      <item
          android:left="-2dp"
          android:right="-2dp"
          android:top="-2dp"
          android:bottom="0dp" >
        <shape android:shape="rectangle" >
          <solid android:color="@android:color/transparent" />
          <stroke
              android:width="1dip"
              android:color="@color/border_line_csl" />
        </shape>
      </item>
      <item>
      <shape>
        <solid android:color="@color/pressed_csl"/>
      </shape>
      </item>
    </layer-list>
  </item>
  <item android:state_pressed="false">
    <layer-list>
      <item
          android:left="-2dp"
          android:right="-2dp"
          android:top="-2dp"
          android:bottom="0dp" >
        <shape android:shape="rectangle" >
          <solid android:color="@android:color/transparent" />
          <stroke
              android:width="1dip"
              android:color="@color/border_line_csl" />
        </shape>
      </item>
      <!--item>
        <shape>
          <solid android:color="@android:color/transparent"/>
        </shape>
      </item-->
    </layer-list>
  </item>
</selector>